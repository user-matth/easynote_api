datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  completed   String
  user_id     Int
}

model User {
  id        Int       @id @default(autoincrement())
  login     String    @unique
  password  String
  name      String
  surname   String?
  role Role @default(CLIENT)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  @@map("user")
}

enum Role {
  CLIENT
  ADMIN
  ROOT
}